<h1>Lista de Productos</h1>

<!-- Formulario para agregar nuevos productos -->
<form action="/products" method="post">
  <label for="productName">Nombre del Producto:</label>
  <input type="text" id="productName" name="name" required>

  <label for="productPrice">Precio:</label>
  <input type="number" id="productPrice" name="price" required>

  <label for="productCategory">Categoría:</label>
  <input type="text" id="productCategory" name="category" required>

  <label for="productAvailability">Disponibilidad:</label>
  <input type="checkbox" id="productAvailability" name="availability" checked>

  <button type="submit">Agregar Producto</button>
</form>

<!-- Lista de productos existentes -->
{{#each products}}
  <div>
    <h2>{{this.name}}</h2>
    <p>Precio: ${{this.price}}</p>
    <p>Categoría: {{this.category}}</p>
    <p>Disponibilidad: {{this.availability}}</p>
    <button onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
  </div>
{{/each}}
